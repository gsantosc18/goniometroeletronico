<Window x:Class="Samples.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Vitruvius"
        Icon="/Assets/VitruviusIcon.ico"
        Height="950" Width="1400"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="80" />
        </Grid.RowDefinitions>
        <Frame Grid.Row="0" Name="frame" NavigationUIVisibility="Hidden" />

        <Grid Grid.Row="1" Background="#37c1d0" Margin="0,20,0,0">
            <Button Style="{StaticResource ButtonPurchaseStyle}" Content="Get Vitruvius Premium" Click="Purchase_Click" />
        </Grid>
    </Grid>
</Window>
